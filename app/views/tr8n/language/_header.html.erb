<div class="section_title">
  <div style="<%=tr8n_style_attribute_tag('float', 'right')%>; padding-top:0px;">
    <% if mode == :view %>
      <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/table_edit.png") ), "switchSectionMode('#{section}', 'edit')") %>
    <% else %>
      <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/disk.png") ), "submitSection('#{section}')")%>
      <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/cancel.png") ), "switchSectionMode('#{section}', 'view')")%>
    <% end %>
  </div>

	<%=tr8n_toggler_tag("#{section}_content")%>

  <%=trla(label, description) %>
</div>
