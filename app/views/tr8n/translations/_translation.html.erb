<td style="text-align:left; vertical-align:top; padding-top:3px;">
  <table>
    <tr>
      <td style="vertical-align:top;padding-right:2px;width:60px;">
        <%=tr8n_translator_mugshot_tag(translation.translator, :linked => true)%>
      </td>
      <td style="vertical-align:top;width:300px">
        <%=tr8n_translator_tag(translation.translator, :linked => true)%>
        <div style="color:grey;">
          <%= tr8n_when_string_tag(translation.created_at) %>
        </div>
        <%=tr8n_translator_rank_tag(translation.translator)%>
      </td>
    </tr>
  </table>
</td>

<td style="text-align:right; vertical-align:top; padding-top:3px;">
  <%=tr8n_spinner_tag("tr8n_spinner_for_#{translation.id}", "", "")%>
  <div id="tr8n_votes_for_<%=translation.id%>" style="white-space:nowrap;">
    <%= translation.rank_label %>
  </div>
</td>

<td style="text-align:center; vertical-align:top; color:grey; padding-top:2px;">
  <% if translation.translation_key.can_be_translated? %>
    <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/thumb_up.png") ), "tr8nTranslator.voteOnTranslation('#{translation.translation_key.key}', '#{translation.id}', 1)")%>
    <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/thumb_down.png") ), "tr8nTranslator.voteOnTranslation('#{translation.translation_key.key}','#{translation.id}', -1)")%>
    <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/exclamation.png") ), "tr8nLightbox.show('/tr8n/translator/lb_report?translation_id=#{translation.id}', {width:600, height:360});")%>
  <% else %>
    <div style="text-align:center;">
      <%=image_tag( url_with_cache_version("/tr8n/images/lock.png"), :style=>"height:14px", :title => trla("This phrase is locked"))%>
    </div>
  <% end %>
</td>

<td style="text-align:left; vertical-align:top; padding-top:3px;">
  <% if mode == :view and translation.can_be_edited_by?(tr8n_current_translator) %>
    <span onDblClick="updateTranslationRow('<%=translation.id%>', 'edit')" title="Translation for: <%=translation.key.label%>">
      <%= h translation.label %>
    </span>
  <% elsif mode == :edit %>
    <%= text_area_tag("translation_row_value_#{translation.id}", translation.label, :style=>"width:99%;height:60px;border:1px solid #ccc;", :class => "keyboardInput" ) %>
  <% else %>
    <%= h translation.label %>
  <% end %>

  <% if translation.context %>
    <div style="font-size: 11px; color: grey; padding-top:3px;">
      <%=trla("Context:")%> <%= translation.context %>
    </div>
  <% end %>

  <% if [:list, :short_list].include?(mode) %>
     <%= render :partial => "/tr8n/translations/original_phrase", :locals => {:translation => translation} %>
  <% end %>
</td>

<% if [:view, :edit].include?(mode) %>
  <td style="text-align:right; vertical-align:top; padding-top:3px;">
   <% if mode == :view %>
      <% if translation.can_be_edited_by?(tr8n_current_translator) %>
          <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/pencil.png") ), "updateTranslationRow('#{translation.id}', 'edit')")%>
          <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/cross.png") ), "deleteTranslationRow('#{translation.id}', '#{@section_key}')")%>
      <% elsif translation.can_be_deleted_by?(tr8n_current_translator)  %>
          <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/cross.png") ), "deleteTranslationRow('#{translation.id}', '#{@section_key}')")%>
      <% end %>
  <% elsif mode == :edit %>
      <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/disk.png") ), "submitTranslationRow('#{translation.id}')")%>
      <%=link_to_function(image_tag( url_with_cache_version("/tr8n/images/cancel.png") ), "updateTranslationRow('#{translation.id}', 'view')")%>
  <% end %>
</td>
<% end %>

<% if mode == :edit %>
  <script>
    VKI_attach(document.getElementById("translation_row_value_<%=translation.id%>"));
  </script>
<% end %>
